@model FA.JustBlog.Core.Models.Comment

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <!-- left column -->
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Detail comment</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form role="form" asp-action="edit" asp-route-id="@Model.Id">
                    <dl class="card-body">
                        <table class="table">
                        <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Name)
                        </dd>
                        <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Email)
                        </dt>
                        <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Email)
                        </dd>
                        <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Post)
                        </dt>
                        <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Post.ShortDescription)
                        </dd>
                        <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.CommentHeader)
                        </dt>
                        <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.CommentHeader)
                        </dd>
                        <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.CommentText)
                        </dt>
                        <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.CommentText)
                        </dd>
                        <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.CommentTime)
                        </dt>
                        <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.CommentTime)
                        </dd>
                        </table>
                    </dl>
                    <!-- /.card-body -->

                    <div class="card-footer">
                        <button asp-action="Comments" asp-controller="Comment" type="submit" class="btn btn-default float-right">Back to list</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
