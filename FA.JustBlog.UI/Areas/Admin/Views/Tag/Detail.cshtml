@model FA.JustBlog.Core.Models.Tag

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <!-- left column -->
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Detail tag</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form role="form" asp-action="edit" asp-route-id="@Model.Id">
                    <dl class="card-body">
                        <table class="table">
                            <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Name)
                            </dt>
                            <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Name)
                            </dd>
                            <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.UrlSlug)
                            </dt>
                            <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.UrlSlug)
                            </dd>
                            <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Description)
                            </dt>
                            <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Description)
                            </dd>
                            <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Count)
                            </dt>
                            <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Count)
                            </dd>
                        </table>
                    </dl>
                    <!-- /.card-body -->

                    <div class="card-footer">
                        <button asp-action="Tags" asp-controller="Tag" type="submit" class="btn btn-default float-right">Back to list</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
